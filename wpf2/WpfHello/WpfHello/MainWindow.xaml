<Window x:Class="WpfHello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHello"
        mc:Ignorable="d"
        Title="Hello" Height="350" Width="500" MinHeight="350" MinWidth="300" Closing="Window_Closing">
    <DockPanel>
        <Menu DockPanel.Dock="Top" HorizontalAlignment="Left">
            <MenuItem Header="File">
                <MenuItem Header="Exit" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        <Label x:Name="lbl" HorizontalAlignment="Center" DockPanel.Dock ="Top">Пуск</Label>
    
    <StatusBar x:Name="stb" DockPanel.Dock="Bottom">
        <StatusBarItem x:Name="stb1">
            <TextBlock>Статусная панель</TextBlock>
        </StatusBarItem >
        <Separator/>
        <StatusBarItem x:Name="stb2">
            <TextBlock>Online</TextBlock>
        </StatusBarItem>
        <StatusBarItem x:Name="stb3">
            <TextBlock></TextBlock>
        </StatusBarItem>
    </StatusBar>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button x:Name="setBut" Content="Set Name" HorizontalAlignment="Left" Margin="50" VerticalAlignment="Top" Click="setBut_Click"/>
        <Button x:Name="retBut" Content="Ret Name" HorizontalAlignment="Left" Margin="50,100,0,0" VerticalAlignment="Top" Width="56" Click="retBut_Click"/>
        <TextBox x:Name="setText" HorizontalAlignment="Stretch" Margin="157,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" TextChanged="setText_TextChanged"/>
        <Label x:Name="retLabel" Content="" HorizontalAlignment="Left" Margin="193,100,0,0" VerticalAlignment="Top" Height="28" Width="284"/>
        <Button x:Name="New_Win" Content="New Win" HorizontalAlignment="Left" Margin="50,152,0,0" VerticalAlignment="Top" Width="56" Click="New_Win_Click"/>
            <TextBlock x:Name="txtBlock" Margin="10,15,10,15" TextWrapping="Wrap" Text="TextBlock" />
    </Grid>
    </DockPanel>
</Window>
