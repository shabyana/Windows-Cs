<Window x:Class="WpfHello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHello"
        xmlns:Local="clr-namespace:WpfHello"
        mc:Ignorable="d"
        Title="Hello" Height="350" Width="500" MinHeight="350" MinWidth="300" Closing="Window_Closing">
    <DockPanel>
        <Menu DockPanel.Dock="Top" HorizontalAlignment="Left">
            <MenuItem Header="File">
                <MenuItem Header="Exit" Click="MenuItem_Click"/>
                <MenuItem Header="Launch" Command="Local:CustomCommands.Launch"/>
                <MenuItem Header="Exit" Click="MenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Копировать" CommandTarget="{Binding ElementName=MainWindow}" Command="Copy"/>
                <MenuItem Header="Вырезать" CommandTarget="{Binding ElementName=MainWindow}" Command="Cut"/>
                <MenuItem Header="Вставить" CommandTarget="{Binding ElementName=MainWindow}" Command="Paste"/>
            </MenuItem>

        </Menu>
        <Label x:Name="lbl" HorizontalAlignment="Center" DockPanel.Dock ="Top">Пуск</Label>

        <StatusBar x:Name="stb" DockPanel.Dock="Bottom">
            <StatusBarItem x:Name="stb1">
                <TextBlock>Статусная панель</TextBlock>
            </StatusBarItem >
            <Separator/>
            <StatusBarItem x:Name="stb2">
                <TextBlock>Online</TextBlock>
            </StatusBarItem>
            <StatusBarItem x:Name="stb3">
                <TextBlock></TextBlock>
            </StatusBarItem>
            <StatusBarItem x:Name="stb4">
                <CheckBox x:Name="check">Разрешить открытие формы</CheckBox>
            </StatusBarItem>
        </StatusBar>
        <Grid Button.Click="Grid_Click">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button x:Name="setBut" Content="Set Name" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Height="24"/>
            <Button x:Name="retBut" Content="Ret Name" HorizontalAlignment="Left" Margin="50,11,0,0" VerticalAlignment="Top" Width="56" Height="28" Grid.Row="1" />
            <TextBox x:Name="setText" Margin="7,50,272,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" TextChanged="setText_TextChanged" Grid.Column="1"/>
            <Label x:Name="retLabel" Content="" HorizontalAlignment="Left" Margin="43,11,0,0" VerticalAlignment="Top" Height="56" Width="284" Grid.Column="1" Grid.Row="1"/>
            <Button x:Name="New_Win" Command="Local:CustomCommands.Launch" Content="New Win" HorizontalAlignment="Left" Margin="50,63,0,0" VerticalAlignment="Top" Width="56" Height="27" Grid.RowSpan="2" Grid.Row="1"/>
            <TextBlock x:Name="txtBlock" Margin="10,15,10,15" TextWrapping="Wrap" Text="TextBlock" />
        </Grid>
    </DockPanel>
</Window>
